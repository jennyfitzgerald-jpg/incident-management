# OAuth Provider: azure | google | oidc
OAUTH_PROVIDER=google

# Redirect URI: use your LIVE app URL for public deployment (no /callback path â€” app uses query params on root)
# Local:   http://localhost:8501/
# Live:    https://YOUR-APP-NAME.streamlit.app/
OAUTH_REDIRECT_URI=http://localhost:8501/

# Required when OAuth is configured (and when ENV=production)
SESSION_SECRET_KEY=your-random-secret-key-at-least-32-chars

# Azure AD (Microsoft Entra ID)
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Generic OIDC
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_DISCOVERY_URL=

# Application
ENV=development
SESSION_TIMEOUT_MINUTES=60
ADMIN_USERS=admin@example.com
